<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Poppy Admin Suite">



    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>


    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>

        <classes>
            <class name="tests.BaseSmokeTest"></class>
            <class name="tests.VideoMediaFlowTest"></class>
            <class name="tests.PosterMediaFlowTest"></class>
            <class name="tests.UserProfileLoginFlowTest"></class>
        </classes>
    </test>
</suite>
